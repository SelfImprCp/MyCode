<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@drawable/titlebar_bg" >

    <TextView
        android:id="@+id/titlebar_text_title"
        style="@style/titlebar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxEms="8"
        android:singleLine="true" >
    </TextView>

    <ImageView
        android:id="@+id/titlebar_img_back"
        style="@style/titlebar_img"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/space_4"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="false"
        android:onClick="widgetClick"
        android:src="@drawable/titlebar_back" />

    <ImageView
        android:id="@+id/titlebar_img_menu"
        style="@style/titlebar_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_4"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="false"
        android:onClick="widgetClick"
        android:src="@drawable/titlebar_add" />

</RelativeLayout>